<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rt.apps.covid_19">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/covidicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/covidicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Essentials.EssentialActivity" />
        <activity android:name=".About.AboutActivity" />
        <activity android:name=".Symptoms.SymptomActivity" />
        <activity android:name=".Prevention.PreventionActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".tracker.MainActivity">
        </activity>


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>